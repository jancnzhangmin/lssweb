<script>



    function proreadURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#sucaiimg').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
<div class="col-md-12 ibox ibox-content">
  <div class="ibox-content form-horizontal m-t">
    <div class="form-group">
      <%= form_for(@sucai,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>

          <div class="form-group">
            <label class="col-sm-3 control-label">标题：</label>
            <div class="col-sm-8">
              <%= f.text_field :title,class:"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">列表图片：</label>
            <div class="col-sm-8">
              <%= f.file_field :sucaiimg,class:"form-control",:onchange => "proreadURL(this)" %>
              <img id="sucaiimg" width="600px"  src=<%= @sucai.sucaiimg.url %> >
            </div>

          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-8 text-right">
              <%= f.submit '确定',class: "btn btn-primary"%>&nbsp;<%= link_to "返回",sucais_path,class: "btn btn-primary " %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
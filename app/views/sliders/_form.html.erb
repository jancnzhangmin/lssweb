<script>

    $(document).ready(function(){

     $('#sliderkeywordselect').change(function(){

         $('#sliderkeywordid').val($('#sliderkeywordselect').val());
     });


  });

</script>
<div class="col-md-12 ibox ibox-content">
  <div class="ibox-content form-horizontal m-t">
    <div class="form-group">
      <%= form_for(@slider,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>

          <div class="form-group">
            <label class="col-sm-3 control-label">标题：</label>
            <div class="col-sm-8">
              <%= f.text_field :title,class:"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">内容区域：</label>
            <div class="col-sm-8">
              <%= f.hidden_field :sliderkeyword_id,class:"form-control",id:'sliderkeywordid' %>
              <select class="form-control" id="sliderkeywordselect">
                <option value="0">请选择滚动区域</option>
                <% @sliderkeywords.each do |sliderkeyword| %>
                    <option value=<%=sliderkeyword.id %>><%=sliderkeyword.name %></option>
                    <% end %>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">滚动内容：</label>
            <div class="col-sm-8">
              <%= f.kindeditor :content,class:"form-control" %>
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-8 text-right">
              <%= f.submit '确定',class: "btn btn-primary"%>&nbsp;<%= link_to "返回",sliders_path,class: "btn btn-primary " %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>